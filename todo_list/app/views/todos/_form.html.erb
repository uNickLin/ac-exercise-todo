<% if @todo.errors.any? %>
	<h2>We have some errors here !</h2>
 <ul>
   <% @todo.errors.full_messages.each do |msg| %>
     <li><%= msg %></li>
   <% end %>
 </ul>
<% end %>


<%= form_for @todo do |f| %>
	<%= f.label :title, "Title : " %>
	<%= f.text_area :title %>

	<%= f.label :due_date, "Due Date : " %>
	<%= f.text_field :due_date %>	

	<%= f.submit %>
	<%= link_to 'BACK', todos_path %>

<% end %>